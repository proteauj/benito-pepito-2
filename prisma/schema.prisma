datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  output          = "./prisma/generated/client" // output custom pour Prisma 7
  previewFeatures = ["clientExtensions"]
}

model User {
  id   String @id @default(cuid())
  name String
}

model Order {
  id                String           @id @default(cuid())
  stripeSessionId   String           @unique
  customerEmail     String?
  productIds        String[]
  totalAmount       Int
  currency          String           @default("CAD")
  status            String           @default("pending")
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  billingAddress    CustomerAddress? @relation("OrderBillingAddress", fields: [billingAddressId], references: [id])
  shippingAddress   CustomerAddress? @relation("OrderShippingAddress", fields: [shippingAddressId], references: [id])
  billingAddressId  String?
  shippingAddressId String?
}

model CustomerAddress {
  id         String   @id @default(cuid())
  type       String   // 'billing' ou 'shipping'
  line1      String?
  line2      String?
  city       String?
  state      String?
  postalCode String?
  country    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  billingOrders  Order[] @relation("OrderBillingAddress")
  shippingOrders Order[] @relation("OrderShippingAddress")
}

model ProductStock {
  productId String   @id
  inStock   Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model Migration {
  id         String   @id @default(cuid())
  name       String   @unique
  executedAt DateTime @default(now())
}

model PageVisit {
  id        String   @id @default(cuid())
  page      String   // 'homepage', 'products', etc.
  visitorIP String?  // Optionnel
  userAgent String?  // Optionnel
  visitedAt DateTime @default(now())
}
