datasource db {
  provider = "postgresql"
  url      = env("DB_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id   String @id @default(cuid())
  name String
}

model Order {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  squarePaymentId String
  customerEmail  String?
  productIds     String[]
  totalAmount    Float
  currency       String
  status         String
  shippingMethod String?
  shippingAddress String?
}

model ProductStock {
  productId String   @id
  inStock   Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model Migration {
  id         String   @id @default(cuid())
  name       String   @unique
  executedAt DateTime @default(now())
}

model PageVisit {
  id        String   @id @default(cuid())
  page      String   // 'homepage', 'products', etc.
  visitorIP String?  // Optionnel
  userAgent String?  // Optionnel
  visitedAt DateTime @default(now())
}
